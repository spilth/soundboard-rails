<%= form_with(model: sound, local: true) do |form| %>
  <% if sound.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sound.errors.count, "error") %> prohibited this sound from being saved:</h2>

      <ul>
      <% sound.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :url %>
    <%= form.text_field :url, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :audio %>
    <%= form.file_field :audio, class: 'form-control' %>
    <p class="form-text text-muted">To manually convert a YouTube clip to an MP3 file:
<pre>
$ brew install youtube-dl
$ brew install ffmpeg
$ youtube-dl --extract-audio --audio-format mp3 https://www.youtube.com/watch?v=dQw4w9WgXcQ -o "rickroll.%(ext)s"
</pre>

    </p>

  </div>

  <%= form.submit class: "btn btn-success" %>
<% end %>
